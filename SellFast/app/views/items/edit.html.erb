<h2>Edit item <%= @item.name %></h2>

<%= form_with(model: @item, class: 'item_edit_form') do |f| %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, :size => "150", autocomplete: @item.description %>
  </div>

  <%= f.submit "Update item" %>

<% end %>
