-# in app/views/items/show.html.haml

%h3 Details about #{@item.name}

%ul#details
	%li
		Status:
		= @item.status
	%li
		Current Price:
		= @item.current_price
	
	%li
		User selling this item:
		= @item.seller_id

%h4 Description:

%p#description= @item.description

= link_to 'Edit', edit_item_path(@item)
= button_to 'Delete', item_path(@item), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-primary'
= link_to 'Back to items list', items_path